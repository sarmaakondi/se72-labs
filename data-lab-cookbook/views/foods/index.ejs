<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
    <a href="/users/<%= user._id %>/foods/new">Add Item</a>
    <% if (pantry.length > 0) { %>
    <!-- display pantry items -->
    <ul>
      <% pantry.forEach(item => { %>
      <li><%= item.name %></li>
      <a href="/users/<%= user._id %>/foods/<%= item._id %>/edit">Edit</a>
      <form
        action="/users/<%= user._id %>/foods/<%= item._id %>?_method=DELETE"
        method="post"
      >
        <button type="submit">Delete</button>
      </form>
      <% }) %>
    </ul>
    <% } else { %>
    <p>There are no items in this pantry.</p>
    <% } %>
  </body>
</html>
